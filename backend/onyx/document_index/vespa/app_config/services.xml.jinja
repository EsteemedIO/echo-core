<?xml version="1.0" encoding="utf-8" ?>
<!-- Echo (Onyx fork) Vespa configuration - compatible with DO Vespa oceanic cluster -->
<!-- NOTE: This services.xml uses the existing 'oceanic' content cluster on DO Vespa.
     Echo's danswer_chunk schemas are ADDED to the cluster without removing existing schemas.
     The oceanic_* schemas are managed by deploy-vespa-schemas.sh, not Echo. -->
<services version="1.0">
    <container id="default" version="1.0">
        <document-api/>
        <search/>
        <nodes>
            <node hostalias="node1"/>
        </nodes>
    </container>
    <content id="oceanic" version="1.0">
        <redundancy>1</redundancy>
        <documents>
            <!-- Echo (Onyx fork) RAG schemas - dynamically added by ensure_indices_exist -->
            {{ document_elements }}
        </documents>
        <nodes>
            <node hostalias="node1" distribution-key="0"/>
        </nodes>
    </content>
</services>